@model Biz4CMS.ViewModels.ProductCat
<div class="col-md-4 productModel">
    @if (!string.IsNullOrEmpty(Model.MainImage))
    {
        <a href="/p/@Model.PageURL">
            <img src="/ImageBrowser/CropImage?path=@Model.MainImage.Replace("~/content/images/","")" class="img-thumbnail" alt="@Model.Name " />
        </a>
    }
    <div class="row padding-top-5">
        <div class="col-xs-6">
            <span class="price">@string.Format("{0:0,0}", Model.Price) VND </span>&nbsp;
        </div>
        <div class="col-xs-6">
            @if (Model.MaxFiller > 0)
            {
                <input hidden value="@Model.MaxFiller" id="MaxFiller"/>
                <input hidden value="@Model.ProductId" id="ProductId"/>
                <button type="button" class="btn btn-success btn-block" data-toggle="modal" data-target="#myModal">Add</button>

            }
            else
            {
                @Html.ActionLink("Add", "AddToCart", "ShoppingCart", new { id = Model.ProductId, count = 1 }, new { @class = "btn btn-success btn-block" })

            }
        </div>
    </div>
    <div>
        <a href="/p/@Model.PageURL"><strong>@Model.Name</strong></a>
    </div>
</div>
