@model Biz4CMS.ViewModels.ProductCat
<div class="col-md-4 col-xs-6 productModel img-thumbnail" style="padding: 3px;">
    @if (!string.IsNullOrEmpty(Model.MainImage))
    {
        <a  onclick="showDetail(@Model.ProductId)">
            <img src="/ImageBrowser/CropImage?path=@Model.MainImage.Replace("~/content/images/","")" class="" alt="@Model.Name " />
        </a>
    }
    <div>
        <h4><a href="#">@Model.Name</a> </h4>
        <div class="price pull-right" style="padding-bottom:5px;">@string.Format("{0:0,0}", Model.Price) VND </div>
        <div>
            @if (Model.MaxFiller > 0)
            {
                <input hidden value="@Model.MaxFiller" id="MaxFiller" />
                <input hidden value="@Model.ProductId" id="ProductId" />
                <input hidden value="@Model.Price" id="ProductPrice" />
                <button type="button" class="btn btn-success btn-nori" data-toggle="modal" data-target="#myModal">Mua</button>

            }
            else
            {
                @Html.ActionLink("Mua", "AddToCart", "ShoppingCart", new { id = Model.ProductId, count = 1, price = Model.Price }, new { @class = "btn btn-success btn-nori" })

            }
        </div>
    </div>
    
</div>
