@model Biz4CMS.ViewModels.BriefProductDto
<div class="col-md-4 productModel">
    @if (!string.IsNullOrEmpty(Model.MainImage))
    {
        <a href="/p/@Model.PageURL">
            <img src="/ImageBrowser/CropImage?path=@Model.MainImage.Replace("~/content/images/","")" class="img-thumbnail" alt="@Model.Name "/></a>
    }
    <div class="row padding-top-5">
        <div class="col-xs-4">
            <span class="price">@string.Format("{0:0,0}", Model.Price) </span>&nbsp;
        </div>
        <div class="col-xs-4">
            <input type="number" value="1" min="1" max="100" class="form-control quantity">
        </div>
        <div class="col-xs-4">
            @Html.ActionLink("Mua", "AddToCart", "ShoppingCart", new { id = Model.ProductId, count = 1 }, new { @class = "btn btn-success btn-block" })
        </div>
    </div>
    <div>
        <a href="/p/@Model.PageURL"><strong>@Model.Name</strong></a>
    </div>
    <p>(Mã : @Model.Code)
    </p>
</div>  