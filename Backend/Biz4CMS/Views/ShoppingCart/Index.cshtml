@model Biz4CMS.Models.Order
@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_LayoutNori.cshtml";
}

<script type="text/javascript">
    $(function () {

        $("#paymentform > form").addClass("form-horizontal");
        $("div.form-group input[type='text']").addClass("form-control").attr('required', '');
        $("div.form-group textarea").addClass("form-control");
        // Document.ready -> link up remove event handler
        $(".RemoveLink").click(function () {
            // Get the id from the link
            var recordToDelete = $(this).attr("data-id");
            if (recordToDelete != '') {
                // Perform the ajax post
                $.post("/ShoppingCart/RemoveFromCart", { "id": recordToDelete },
                    function (data) {
                        // Successful requests get here
                        // Update the page elements
                        if (data.ItemCount == 0) {
                            $('#row-' + data.DeleteId).fadeOut('slow');
                        } else {
                            $('#item-count-' + data.DeleteId).text(data.ItemCount);
                        }
                        $('#cart-total').text(data.CartTotal);
                        $('#update-message').text(data.Message);
                        $('#cart-status').text(data.CartCount);
                    });
            }
        });
        $("#UpdateCart").click(function () {
            var rlist = [];
            var qlist = [];
            $(".RemoveLink").each(function () {
                rlist.push($(this).attr("data-id"));
            });
            $(".quantity").each(function () {
                qlist.push($(this).val());
            });
            if (rlist.length > 0) {
                // Perform the ajax post
                $.post("/ShoppingCart/UpdateCart", $.param({ "rlist": rlist, "qlist": qlist }, true),
                    function (data) {
                        // Successful requests get here
                        // Update the page elements

                        $('#cart-total').text(data.CartTotal);
                        $('#update-message').text(data.Message);
                        $('#cart-status').text(data.CartCount);
                    });
            }
        });
    });
</script>
<div class="headline">
    <h1 class="panel-title">
        Thông tin giỏ hàng:</h1>
</div>
<div id="update-message">
</div>
<table width="100%">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Giá
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Thành tiên
        </th>   
        <th>
        </th>
    </tr>
    @if (ViewBag.Cart.CartItems != null)
    {
        var CartItems = (List<Biz4CMS.Models.Cart>)ViewBag.Cart.CartItems;
        foreach (var item in CartItems)
        {
                <tr id="row-@item.RecordId"> <td>
                 <a href="/p/@item.Product.PageURL"><strong>@item.Product.Name</strong></a>
                </td> <td>
                @item.Product.Price
                </td> <td id="item-count-@item.RecordId"> <input type="number" min="1" max="100"
                value="@item.Count" class="form-control quantity"> </td> <td align="right" style="padding-right:
                30px;">
                @(item.Product.Price * item.Count)
                </td> <td> <a href="#" class="RemoveLink btn btn-danger btn-block" data-id="@item.RecordId">Xóa
            </a> </td> </tr>
        }
    }
    <tr>
        <td>
            <b>Tổng cộng</b>
        </td>
        <td>
        </td>
        <td>
        </td>
        <td id="cart-total" align="right" style="padding-right: 30px;">
            @ViewBag.Cart.CartTotal
        </td>
        <td>
        </td>
    </tr>
</table>
<hr class="margin-top-30" />
<div class="row">
    <div class=" col-md-3 column">
        <a href="/product" class="btn btn-primary btn-block" onclick="window.history.back();return false;">
            Tiếp tục mua sắm</a></div>
    <div class=" col-md-3 column">
        <a href="#" class="btn btn-success btn-block" id="UpdateCart">Cập nhật giỏ hàng
        </a>
    </div>
</div>
<hr class="margin-top-30" />
<div class="headline">
    <h2 class="panel-title">
        Thông tin người mua:</h2>
</div>
<div class="row col-md-11" id="paymentform">
    @using (Html.BeginForm(null, null, FormMethod.Post))
    {
        <input hidden name="Total" value="@ViewBag.Cart.CartTotal"/>
        <div class="form-group">
            <label for="exampleInputEmail1" class="col-md-2">
                Họ và Tên</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.FullName)
            </div>
        </div>
        <div class="form-group">
            <label for="cellphone" class="col-md-2">
                Số điện thoại</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Phone)
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-md-2">
                Email</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Email)</div>
        </div>
        <div class="form-group">
            <label for="address" class="col-md-2">
                Địa chỉ</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Address)</div>
        </div>
        <div class="form-group">
            <label for="address" class="col-md-2">
                Thanh toán</label>
            <div class="col-md-9">
                <label class="radio-inline">
                    <input type="radio" name="PaymentType" value="1">
                    Chuyển khoản
                </label>
                <label class="radio-inline">
                    <input type="radio" name="PaymentType" value="2" checked="checked">
                    Tiền mặt
                </label>
            </div>
        </div>
        <div class="form-group">
            <label for="address" class="col-md-2">
                Ghi chú</label>
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.Note, new { rows = 3, columns = 80 })
            </div>
        </div>
        <div class="col-md-3 col-md-offset-2">
            <button type="submit" class="btn btn-success">
                Đăng ký mua hàng</button></div>
    }
</div>
