@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutNori.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {

        $("#submit").click(function () {
            var Success = false;
            var Content = $("#Content").val();
            var Email = $("#Email").val();
            var FullName = $("#FullName").val();
            if (Content.length > 8 && Email.length > 8 && FullName.length > 2) {
                $.ajax({
                    type: "POST",
                    url: "/home/contact",
                    dataType: "text",
                    data: JSON.stringify({ Content: Content, FullName: FullName, Email: Email }),
                    contentType: "application/json; charset=utf-8",
                    async: false,
                    success: function (data) {
                        if (data) { //doesnt goes here
                            alert('Your message has been saved, we will contact you soon');
                        } else {
                            $('#s1').text('Please enter all required fields')
                        }
                    },
                    error: function (textStatus, errorThrown) {
                        Success = false; //doesnt goes here
                    }

                });
            } else {
                $('#s1').text('Please enter all required fields, message must be at least 20 characters')
            }
            return false;
        });


    });



</script>

<section class="well-md">
    <div class="container">
        <h1>Contacts</h1>

        <form class="rd-mailform offset-6" method="post">

            <input type="hidden" name="form-type" value="contact" />
            <fieldset>

                <label data-add-placeholder="">
                    <input type="text" id="fullname"
                           name="name"
                           placeholder="Your name"
                           required />
                </label>

                <label data-add-placeholder="">
                    <input type="text"
                           name="email"
                           placeholder="Your email" id="Email"
                           required />
                </label>

                <label data-add-placeholder="" class="textarea">
                    <textarea name="message"
                              placeholder="Your message" id="Content"
                              required></textarea>
                </label>

                <button class="btn btn-primary" type="submit" id="submit">
                    Send Message
                </button>

                <div class="mfInfo"></div>
            </fieldset>
            <span style="color: orangered !important;" id="s1"></span><span style="color: orangered !important;">
                @ViewBag.Message
                (*&nbsp;Required Fields)
            </span><br />
        </form>
        <!-- END RD-Mailform -->
    </div>
</section>

