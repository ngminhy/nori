@model IEnumerable<Biz4CMS.ViewModels.BriefProductDto>
<script type="text/javascript" language="javascript">
    $(function () {
        $(".quantity").change(function () {
            var url = $(this).closest("div").next().children("a").attr("href");
            url = url.substr(0, url.indexOf("=") + 1) + $(this).val();
            $(this).closest("div").next().children("a").attr("href", url);
        });
    });
</script>

@{
    var i = 0;
    var left = new List<Biz4CMS.ViewModels.BriefProductDto>();
    var right = new List<Biz4CMS.ViewModels.BriefProductDto>();
    foreach (var item in Model)
    {
        if (i % 2 == 0){
            left.Add(item);
        }else{
            right.Add(item);
        }
        i++;
    }
}

<section class="well-md">
            <div class="container">
                <h1>Main menu</h1>
                <div class="row offset-1 flow-offset-1">

                    <div class="col-sm-6 col-lg-5">
                        @foreach(var item in left){
                            @Html.Partial("_productItem3", item);
                            


                        }
                        
                        
                    </div>

                    <div class="col-sm-6 col-lg-offset-1">
                        @foreach (var item in right){
                            @Html.Partial("_productItem3", item);                            
                        }        
                        
                    </div>
                </div>

                <div class="row offset-3">
                    <div class="col-sm-9">
                        <!-- Product -->
                        <div class="product">
                            <img src="@Url.Content("~/Content/Assets/images/page-01_img05.jpg")" alt="">
                            <div class="caption">
                                <!-- Box -->
                                <div class="box">
                                    <div class="box_left"><h5>$ 45.99</h5></div>
                                    <div class="box_cnt">
                                        <p class="small">Dinner</p>
                                        <h5><a href="#">Italian Pasta and Sauce</a></h5>
                                        <p>Served with herby breadcrumbs & Parmesan</p>
                                    </div>
                                </div>
                                <!-- END Box -->
                            </div>
                        </div>
                        <!-- END Product -->
                    </div>
                </div>

                <a href="#" class="btn btn-primary btn-md">View all menu</a>

            </div>
        </section>








